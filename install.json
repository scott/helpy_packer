{
    "builders": [
        {
            "ssh_username": "root",
            "type": "digitalocean",
            "api_token": "{{user `do_api_token`}}",
            "size": "1GB",
            "region": "nyc3",
            "image": "ubuntu-18-04-x64",
            "droplet_name": "packer",
            "snapshot_name": "helpy2-3-packer"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "configs/",
            "destination": "/tmp"
        },        
        {
            "type": "shell",
            "environment_vars": [
                "RUBY={{user `ruby_version`}}",
                "RAILS={{user `rails_version`}}",
                "HELPY_BRANCH={{user `helpy_branch`}}"
            ],
            "scripts": [
                "scripts/01_setup_machine.sh",
                "scripts/02_install_helpy.sh",
                "scripts/03_cleanup.sh",
                "scripts/04_img_check.sh"
            ]
        }
    ]
}